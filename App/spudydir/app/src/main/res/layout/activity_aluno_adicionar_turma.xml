<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cinzaClaro"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/blAlunoAdicionarTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cinzaClaro"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cinzaClaro"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPesquisa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/cinzaClaro"
                android:hint="@string/sp_hint_pesquisa"
                android:paddingEnd="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="60dp"
                android:paddingStart="15dp"
                android:drawableLeft="@drawable/ic_pesquisa"
                android:drawableStart="@drawable/ic_pesquisa"
                android:drawablePadding="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/azulFundo" />

        <Spinner
            android:id="@+id/spnPesquisa"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/spinner_pesquisa"
            android:backgroundTint="@color/azulFundo"/>

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/lvTurmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/blAlunoAdicionarTurma"
        android:dividerHeight="1dp"
        android:divider="@color/azulFundo">
    </ListView>

</RelativeLayout>
