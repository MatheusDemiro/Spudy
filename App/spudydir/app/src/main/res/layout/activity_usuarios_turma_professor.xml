<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spudydev.spudy.entidades.turma.gui.UsuariosTurmaProfessorActivity">

    <TextView
        android:id="@+id/tvUsuariosProfessor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/rosaSpudy"
        android:text="@string/sp_titulo_usuarios"
        android:textSize="20sp"
        android:textColor="@color/branco"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
        android:id="@+id/btnInformacaoSairProfessor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_informacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvUsuariosTurmaProfessor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">
    </ListView>

</android.support.constraint.ConstraintLayout>
