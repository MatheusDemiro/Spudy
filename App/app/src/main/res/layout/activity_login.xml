<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/azulFundo"
   tools:context="com.example.spudydev.spudy.Activity.LoginActivity">

   <EditText
       android:id="@+id/edt_email"
       android:drawableLeft="@drawable/ic_email"
       android:drawablePadding="10dp"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_above="@+id/edt_senha"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@drawable/border_white"
       android:ems="10"
       android:hint="@string/sp_hintEmail"
       android:inputType="textEmailAddress"
       android:paddingLeft="15dp"
       android:textColorHint="@color/textColorHint" />

   <EditText
       android:id="@+id/edt_senha"
       android:drawableLeft="@drawable/ic_cadeado"
       android:drawablePadding="10dp"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="20dp"
       android:background="@drawable/border_white"
       android:ems="10"
       android:hint="@string/sp_hintSenha"
       android:inputType="textPassword"
       android:paddingLeft="15dp"
       android:textColorHint="@color/textColorHint" />

   <Button
       android:id="@+id/btn_entrar"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_below="@+id/text_esqueciSenha"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_centerHorizontal="true"
       android:background="@drawable/border_pink"
       android:text="@string/btn_entrar"
       android:textColor="@color/cinzaClaro"
       android:textSize="16sp" />

    <TextView
        android:id="@+id/text_nao_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_entrar"
        android:layout_alignStart="@+id/btn_entrar"
        android:layout_below="@+id/btn_entrar"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginVertical="90dp"
        android:text="@string/sp_nRegistro"
        android:textColor="@color/cinzaClaro" />

    <TextView
        android:id="@+id/text_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_nao_Registro"
        android:layout_alignBottom="@+id/text_nao_Registro"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/text_nao_Registro"
        android:layout_toRightOf="@+id/text_nao_Registro"
        android:onClick=""
        android:text="@string/sp_registre"
        android:textColor="@color/textColorAccent" />
   <TextView
       android:id="@+id/text_esqueciSenha"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/edt_senha"
       android:layout_marginBottom="20dp"
       android:text="@string/sp_esqueceuSenha"
       android:textColor="@color/textColorAccent" />

   <ImageButton
       android:id="@+id/imb_titulo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="35dp"
       android:background="#345D7E"
       app:srcCompat="@drawable/vector_logo_new" />


</RelativeLayout>
