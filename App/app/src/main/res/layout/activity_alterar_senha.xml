<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulFundo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:paddingVertical="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azulFundo"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.example.spudydev.spudy.Activity.ConfirmRegistroActivity">

            <EditText
                android:id="@+id/edt_AlterarSenhaAntiga"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Digite a senha antiga"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/edt_AlterarSenhaNova"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Digite a nova senha"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/edt_AlterarSenhaNovaConfirma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Confirme a nova senha"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_AlterarSenhaPerfil"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border_pink"
                android:text="Alterar Senha"
                android:textColor="@color/cinzaClaro" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>